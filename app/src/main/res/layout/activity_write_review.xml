<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteReviewActivity">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rec_1">

        <ImageButton
            android:id="@+id/backBtn"
            android:src="@drawable/ic_back_white"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:text="Write Review"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_below="@id/toolbarRL"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_store_gray"
        app:c_border="true"
        app:c_border_width="2dp"
        app:c_border_color="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_width="125dp"
        android:layout_height="125dp" />

    <TextView
        android:id="@+id/shopNameTv"
        android:layout_below="@id/profileIv"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/labelTv"
        android:layout_below="@id/shopNameTv"
        android:textAlignment="center"
        android:text="How was your experience with this seller? \nYour feedback is important to improve our qualify of services"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_below="@id/labelTv"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/reviewEt"
        android:layout_below="@id/ratingBar"
        android:background="@drawable/shape_rec_2"
        android:hint="Write your review..."
        android:minHeight="100dp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submitBtn"
        android:src="@drawable/ic_done_white"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>